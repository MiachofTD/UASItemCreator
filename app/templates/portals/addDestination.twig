{% extends 'layout.twig' %}

{% block nav %}
    {% include 'portals/nav.twig' with { current: 'addDestination' } %}
{% endblock %}

{% block content %}
    <h2>Add Destination to Portal</h2>

    <div>
        Portal locations are based on character locations. So choose a character from the
        drop down, choose a portal from the dropdown, and the destination coordinates will
        be set to the location your character is at.
    </div>


    <form class="form-horizontal" action="addDestination.php" method="GET">
        <div class="form-group">
            <label for="avatar" class="col-sm-2 control-label">Avatar</label>
            <div class="col-sm-10">
                <select name="AvatarGUID" id="avatar" class="form-control">
                    {% if avatars|length > 1 %}
                        <option value="" disabled selected>Select Avatar</option>
                    {% endif %}

                    {% for avatar in avatars %}
                        <option value="{{ avatar.AvatarGUID }}">{{ avatar.name }} (GUID: {{ avatar.AvatarGUID }})</option>
                    {% endfor %}
                </select>
                <input type="hidden" name="min_lvl" value="0" />
                <input type="hidden" name="max_lvl" value="0" />
            </div>
        </div>
        <div class="form-group">
            <label for="portal" class="col-sm-2 control-label">Portal</label>
            <div class="col-sm-10">
                <select name="ID" id="portal" class="form-control">
                    {% if portals|length > 1 %}
                        <option value="" disabled selected>Select Portal</option>
                    {% endif %}

                    {% for portal in portals %}
                        <option value="{{ portal.ID }}">{{ portal.Name }} (ID: {{ portal.ID }})</option>
                    {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Add Destination</button>
            </div>
        </div>
    </form>
{% endblock %}
